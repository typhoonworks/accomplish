{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "svelte"],
    "baseUrl": ".",
    "paths": {
      "$lib": ["svelte"],
      "$lib/*": ["svelte/*"]
    },
    "typeRoots": ["./node_modules/@types", "./assets/types"]
  },
  "include": ["src", "svelte", "**/*.ts",  "**/*.svelte"],
  "exclude": ["node_modules", "dist"]
}

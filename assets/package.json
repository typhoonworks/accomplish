{
  "scripts": {
    "typecheck": "tsc --noEmit --pretty",
    "lint": "eslint . && stylelint '**/*.{css,scss,svelte}'",
    "format": "prettier --write . && stylelint --fix '**/*.{css,scss,svelte}'",
    "format:check": "prettier --check . && stylelint '**/*.{css,scss,svelte}'",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss,svelte}": [
      "stylelint --fix"
    ],
    "**/*.ts": [
      "tsc --noEmit"
    ]
  },
  "type": "module",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.13.4",
    "@types/phoenix": "^1.6.6",
    "@types/phoenix_live_view": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "esbuild": "^0.25.0",
    "esbuild-plugin-import-glob": "^0.1.1",
    "esbuild-svelte": "^0.9.0",
    "eslint": "^9.20.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-svelte": "^2.46.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.1",
    "prettier-plugin-svelte": "^3.3.3",
    "stylelint": "^16.14.1",
    "stylelint-config-recommended": "^15.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "svelte": "^5.20.1",
    "svelte-eslint-parser": "^0.43.0",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "live_svelte": "file:../deps/live_svelte",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_view": "file:../deps/phoenix_live_view",
    "topbar": "^3.0.0"
  }
}
